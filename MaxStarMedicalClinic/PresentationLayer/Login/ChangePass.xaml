<Window x:Class="PresentationLayer.Login.ChangePass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePass" Height="300" Width="436">
    <Grid>
        <Label Name="label_menu" Content="Change Password" Height="93" HorizontalAlignment="Left" Margin="12,12,0,0"  VerticalAlignment="Top" Width="384" FontSize="36" Foreground="#FF625E5E" />
        <Border BorderBrush="Silver" BorderThickness="2" Height="1" HorizontalAlignment="Left" Margin="15,70,0,0" Name="border1" VerticalAlignment="Top" Width="350" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="171,110,0,0" Name="data_pass" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="171,157,0,0" Name="data_repass" VerticalAlignment="Top" Width="120" />
        <Label Content="password:" Height="28" HorizontalAlignment="Left" Margin="90,106,0,0" Name="label_pass" VerticalAlignment="Top" />
        <Label Content="Re-enter password:" Height="28" HorizontalAlignment="Left" Margin="41,153,0,0" Name="label_repass" VerticalAlignment="Top" />
        <Button Background="#FF2FDAD7" BorderBrush="#FF2FDAD7" Content="Save &amp; Continue" Height="31" HorizontalAlignment="Right" Name="save" VerticalAlignment="Top" Width="120" Click="save_Click" FontWeight="Normal" Margin="0,207,123,0" />
    </Grid>
</Window>
